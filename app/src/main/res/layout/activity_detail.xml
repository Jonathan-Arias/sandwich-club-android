<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/detail_also_known_label_tv"
        android:text="@string/detail_also_known_as_label"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_iv"/>

    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_also_known_label_tv"
        app:layout_constraintTop_toBottomOf="@id/image_iv"
        tools:text="@string/lorem_ipsum" />

    <TextView
        android:id="@+id/detail_place_of_origin_label_tv"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/also_known_tv"
        app:layout_constraintLeft_toLeftOf="@id/detail_also_known_label_tv"/>

    <TextView
        android:id="@+id/origin_tv"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/also_known_tv"
        app:layout_constraintTop_toBottomOf="@id/also_known_tv"
        tools:text="Lorem ipsum" />

    <TextView
        android:id="@+id/detail_description_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_description_label"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/detail_also_known_label_tv"
        app:layout_constraintTop_toBottomOf="@id/origin_tv"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/origin_tv"
        app:layout_constraintTop_toBottomOf="@id/origin_tv"
        tools:text="Lorem ipsum" />

    <TextView
        android:id="@+id/detail_ingredients_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        app:layout_constraintLeft_toLeftOf="@+id/detail_description_label_tv"/>

    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/description_tv"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        tools:text="Lorem ipsum" />

</android.support.constraint.ConstraintLayout>
